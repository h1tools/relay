{
  "name": "relay",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start:foreground": "pm2 start dist/index.js --no-daemon",
    "start:background": "pm2 start dist/index.js --name relay-app",
    "start:fg": "pm2 start dist/index.js --no-daemon",
    "start:bg": "pm2 start dist/index.js --name relay-app",
    "stop": "pm2 stop relay-app",
    "restart": "pm2 restart relay-app"
  },
  "dependencies": {
    "chalk": "^5.6.0",
    "express": "^4.19.2",
    "gradient-string": "^3.0.0",
    "pm2": "^6.0.8",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/ws": "^8.5.10",
    "cross-env": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0"
  }
}
